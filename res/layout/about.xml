<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

	<TextView android:id="@+id/by" android:gravity="center_horizontal" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="by José María Franco Fraiz" />

	<LinearLayout android:orientation="horizontal" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
		android:gravity="center_horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<ImageButton android:id="@+id/mail" android:src="@drawable/leather_mail_64" android:background="@android:color/transparent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

		<ImageButton android:id="@+id/twitter" android:src="@drawable/leather_twitter_64" android:background="@android:color/transparent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="10dp"  android:layout_marginLeft="10dp"/>

	</LinearLayout>
    
</LinearLayout>