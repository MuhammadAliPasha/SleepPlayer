<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:paddingTop="5px"
  android:paddingBottom="5px"
  android:layout_height="wrap_content">

	<LinearLayout android:orientation="horizontal"
		android:paddingTop="5px" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:layout_height="wrap_content" android:layout_weight="2" 
			android:textSize="20dip" android:text="@+id/rfecha" android:id="@+id/rfecha"
			android:layout_width="fill_parent" />

		<TextView android:text="@+id/rduracion"
			android:layout_height="wrap_content" android:id="@+id/rduracion"
			android:textSize="15dip" android:layout_width="fill_parent"
			android:gravity="right"
			android:layout_gravity="bottom" android:layout_weight="4"/>

		<TextView android:text="@+id/rposicion"
			android:layout_height="wrap_content" android:id="@+id/rposicion"
			android:textSize="15dip" android:layout_width="fill_parent"
			android:gravity="right"
			android:layout_gravity="bottom" android:layout_weight="4"/>

	</LinearLayout>

	<TextView android:text="@+id/rurl" android:layout_height="wrap_content"
			android:id="@+id/rurl" android:textSize="15dip" android:layout_width="fill_parent"
			android:ellipsize="middle" android:lines="2" />
  
</LinearLayout>
